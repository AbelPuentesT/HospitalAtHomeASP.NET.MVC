@page
@model HospitalAtHome.App.FrontEnd.Pages.ListPatientsModel
@{
}
<h1>Manage Patient</h1>
<p>On this page you can manage Patients.</p>
<div>
<a class="btn btn-primary table-btn" asp-page="./CreateMedical">Add a Patient</a>>
</div>
<table class="table table-striped table-dark">
    <thead >
        <tr>
            <th scope="col">Code</th>
            <th scope="col">Name</th>
            <th scope="col">LastName</th>
            <th scope="col">Phone Number</th>
            <th scope="col">Gender</th>
            <th scope="col">Address</th>
            <th scope="col">City</th>
            <th scope="col">BirthDate</th>
            <th scope="col">Family Member</th>
            <th scope="col">Medical</th>
            <th scope="col">Vital Sign</th>
            <th scope="col">Medical Record</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var Patient in Model.patients)
        {
            <tr>
                <td>@Patient.Code</td>
                <td>@Patient.Name</td>
                <td>@Patient.LastName</td>
                <td>@Patient.PhoneNumber</td>
                <td>@Patient.Gender</td>
                <td>@Patient.Address</td>
                <td>@Patient.City</td>
                <td>@Patient.BirthDate</td>
                <td>@Patient.DesignatedFamilyMember</td>
                <td>@Patient.Medical</td>
                <td>@Patient.VitalSign</td>
                <td>@Patient.MedicalRecord</td>
            </tr>
        }
    </tbody>

</table>